{
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/**/__tests__/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
  "testTimeout": 30000,
  "verbose": true,
  "collectCoverage": true,
  "moduleFileExtensions": ["js", "json"],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/qdrant_storage/"
  ]
}
